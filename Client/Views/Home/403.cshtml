@{
    ViewData["Title"] = "403";
    Layout = "ErrorLayout";
}

<div class="error-box">
    <h1>403</h1>
    <h3 class="h2 mb-3"><i class="fas fa-exclamation-circle"></i> FORBIDDEN!!!!</h3>
    <p class="h4 font-weight-normal">it seems you're lost!</p>
    <a id="countdown">5</a>
</div>



@section Scripts{
    <script>
        let timer = 5
        setInterval(() => {
            document.getElementById('countdown').innerHTML = timer;
            timer--;

            if (timer === 0) {
                location.href = "/";
            }
        }, 1000)
    </script>
}